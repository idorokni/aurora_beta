<UserControl x:Class="Aurora.Client.WpfApplication.UserControls.CommentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Client.WpfApplication.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">

    <Viewbox Stretch="Uniform">
        <Border Background="#1E1E1E" CornerRadius="15" Padding="20" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Profile Section -->
                <Border Width="80" 
                        Height="80" 
                        CornerRadius="40"
                        VerticalAlignment="Top"
                        Margin="0 0 20 0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding ProfilePicture}" 
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <!-- Content Section -->
                <StackPanel Grid.Column="1">
                    <!-- User Info -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                        <TextBlock Text="{Binding Username}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0 0 15 0"/>

                        <TextBlock Text="{Binding Email}"
                                   FontSize="18"
                                   Foreground="#A0A0A0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Comment Content -->
                    <TextBlock Text="{Binding CommentContent}"
                              FontSize="20"
                              Foreground="White"
                              TextWrapping="Wrap"
                              Margin="0 15 0 0"
                              LineHeight="28"/>
                </StackPanel>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>